{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@scripts/*": ["scripts/*"],
      "@types/*": ["types/*"],
      "@rules/*": ["rules/*"]
    }
  },
  "include": ["src/**/*"]
}
